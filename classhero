class Hero{
  constructor(nome,idade,tipo){
    this.nome = nome
    this.idade = idade
    this.tipo = tipo ["mago","guerreiro","monge","ninja "]
  }
}
let arma;
  if (tipo="mago"){arma= "magia"}
  else if (tipo="guerreiro") {arma= "espada"}
  else if (tipo = "monge"){arma= "artes marciais"}
  else {arma= "shuriken"}
    
atacar("monge")
function atacar () {
  console.log(`O ${tipo}atacou usando ${arma}`);
}

